<%= form_for @user do |f| %>
  <%= f.hidden_field :fbid %>
  <%= f.hidden_field :use_profile_pic %>
  <%= hidden_field_tag :return, @return %>
  <%= f.label :username %>
  <%= f.text_field :username, :class => 'txt' %>
  <div class="btngroup">
    <a href="#" class="btn no-text use-profile-pic"></a>
    <a href="#" class="btn no-text dont-use-profile-pic">
      <img src="//graph.facebook.com/1/picture" />
    </a>
  </div>
  <div class="btngroup">
    <a href="#" id="save-user" class="btn general-edit">Save</a>
  </div>
<% end %>