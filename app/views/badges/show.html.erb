<% content_for :head do %>
  <meta property="fb:app_id" content="<%= Settings.facebook_appid %>" />
  <meta property="og:type"   content="hicapacity:badge" />
  <meta property="og:url"    content="<%= badge_url(@badge.slug) %>" />
  <meta property="og:title"  content="<%= @badge.title %>" />
  <meta property="og:image"  content="<%= image_fullurl(@badge.slug + '-small.png') %>" />
  <meta property="og:image"  content="<%= image_fullurl(@badge.slug + '-medium.png') %>" />
  <meta property="og:image"  content="<%= image_fullurl(@badge.slug + '-large.png') %>" />
<% end %>

<h2><%= @badge.title %></h2>
<div class="btngroup badge">
  <div class="burst"></div>
  <%= image_tag @badge.slug + '-large.png' %>
</div>
<%= render :partial => 'badges/descriptions/' + @badge.slug %>