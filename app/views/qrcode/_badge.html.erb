<% content_for :head do %>
  <%= javascript_include_tag "qr_code_badge" %>
  <script>
    window.logBadge = <%= @logbadge ? badge_url(@badge.slug).to_json() : 'false' %>;
    window.badgePath = <%= raw(image_path(@badge.slug + '-large.png').to_json) %>;
  </script>
<% end %>

<%= render :partial => 'badges/descriptions/' + @badge.slug %>